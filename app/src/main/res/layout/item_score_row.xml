<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/card_background"
    android:orientation="horizontal"
    android:padding="12dp">

    <TextView
        android:id="@+id/scoreRank"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="#1"
        android:textColor="@color/bp_gold"
        android:textSize="@dimen/bp_body_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scoreMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Classic"
            android:textColor="@color/bp_white"
            android:textSize="@dimen/bp_body_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scoreMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Level 4 â€¢ 02:31"
            android:textColor="@color/bp_gray"
            android:textSize="@dimen/bp_caption_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/scoreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="120,000"
        android:textColor="@color/bp_white"
        android:textSize="@dimen/bp_body_text_size"
        android:textStyle="bold" />
</LinearLayout>
