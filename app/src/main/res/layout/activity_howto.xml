<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    android:padding="@dimen/bp_margin">

    <TextView
        android:id="@+id/howtoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How To Play"
        android:textColor="@color/bp_white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/howtoScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/howtoFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/howtoTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Swipe anywhere to move the paddle. Tap to launch. Collect powerups to stack abilities. Use the HUD to monitor score, lives, and timers."
                android:textColor="@color/bp_white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Powerups"
                android:textColor="@color/bp_gold"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="• Multi-ball: Adds two extra balls\n• Laser paddle: Tap with a second finger to fire beams\n• Guardrail: Temporary safety net at the bottom\n• Shield: Absorbs a hit without losing a life\n• Wide paddle: Expands the paddle\n• Slow motion: Reduces ball speed briefly"
                android:textColor="@color/bp_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Brick Types"
                android:textColor="@color/bp_gold"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="• Standard: one hit\n• Reinforced: two or three hits\n• Explosive: damages neighbors\n• Unbreakable: requires fireball or laser barrage"
                android:textColor="@color/bp_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Modes"
                android:textColor="@color/bp_gold"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Classic: Standard breakout loop.\nTimed: Beat the clock.\nEndless: Infinite levels with scaling difficulty.\nGod Mode: Practice without losing lives.\nLevel Rush: Speed-run each stage."
                android:textColor="@color/bp_gray" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/howtoFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonHowToBack"
            style="@style/Widget.BreakoutPlus.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_back"
            android:backgroundTint="@color/bp_gray" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
