<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    android:padding="@dimen/bp_margin">

    <TextView
        android:id="@+id/howtoTitle"
        style="@style/Text.BreakoutPlus.ScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How To Play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/howtoScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/howtoFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/howtoTitle">

        <LinearLayout
            android:id="@+id/howtoList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:orientation="vertical">

            <TextView
                style="@style/Text.BreakoutPlus.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_howto_hint" />

            <TextView
                style="@style/Text.BreakoutPlus.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/howto_controls"
                />

            <TextView
                android:id="@+id/howtoQuickBody"
                style="@style/Text.BreakoutPlus.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:text="Swipe anywhere to move the paddle. Drag to aim and release to launch. Magnet powerups can catch balls for a skill shot. Collect powerups to stack abilities. Use the HUD to monitor score, lives, and timers."
                />

            <TextView
                android:id="@+id/powerupsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="▼ Powerups"
                android:textColor="@color/bp_gold"
                android:textSize="@dimen/bp_body_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/powerupsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="• Multi-ball: Adds extra balls\n• Laser: Fires beams at bricks (two-finger tap)\n• Guardrail: Safety net below paddle\n• Shield: Absorbs a miss\n• Extra life: Gain one additional life\n• Wide paddle: Expands paddle size\n• Slow: Slows gameplay briefly\n• Fireball: Pierces through bricks\n• Magnet: Pulls powerups and catches balls on contact\n• Gravity Well: Bends ball paths toward center\n• Ball Splitter: Splits balls into more\n• Freeze: Nearly stops time for a moment\n• Pierce: Balls pass through bricks"
                android:textColor="@color/bp_gray"
                android:textSize="@dimen/bp_small_text_size" />

            <TextView
                android:id="@+id/bricksHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="▼ Brick Types"
                android:textColor="@color/bp_gold"
                android:textSize="@dimen/bp_body_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bricksContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="• Standard: one hit\n• Reinforced: two hits\n• Armored: three hits\n• Explosive: damages surrounding bricks\n• Unbreakable: requires fireball/laser\n• Moving: slides horizontally\n• Spawning: breaks into child bricks\n• Phase: changes phases with new HP\n• Boss: multi-phase heavyweight brick"
                android:textColor="@color/bp_gray"
                android:textSize="@dimen/bp_small_text_size" />

            <TextView
                android:id="@+id/modesHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="▼ Game Modes"
                android:textColor="@color/bp_gold"
                android:textSize="@dimen/bp_body_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/modesContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Classic: Standard breakout progression.\nTimed Challenge: Score high in 2:30.\nEndless: Infinite levels with scaling difficulty.\nGod Mode: Practice without losing lives.\nLevel Rush: Beat each stage before time expires.\nInvaders: Bounce shots to clear ships while dodging fire."
                android:textColor="@color/bp_gray"
                android:textSize="@dimen/bp_small_text_size" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/howtoFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonHowToBack"
            style="@style/Widget.BreakoutPlus.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_back"
            android:backgroundTint="@color/bp_gray" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
