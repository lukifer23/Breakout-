<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bp_navy">

    <com.breakoutplus.game.GameGLSurfaceView
        android:id="@+id/gameSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hudOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPause"
            style="@style/Widget.BreakoutPlus.PauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:minWidth="44dp"
            android:minHeight="44dp"
            android:text=""
            android:contentDescription="@string/label_pause"
            app:icon="@drawable/ic_pause"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/hudRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/hud_chip"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonPause"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/hudScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Score 0"
                android:textColor="@color/bp_white"
                android:textSize="@dimen/bp_body_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hudLives"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Lives 3"
                android:textColor="@color/bp_white"
                android:textSize="@dimen/bp_body_text_size" />

            <TextView
                android:id="@+id/hudTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Time 02:00"
                android:textColor="@color/bp_white"
                android:textSize="@dimen/bp_body_text_size" />

            <TextView
                android:id="@+id/hudLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Level 1"
                android:textColor="@color/bp_white"
                android:textSize="@dimen/bp_body_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/hudMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Classic"
            android:textColor="@color/bp_gray"
            android:textSize="@dimen/bp_caption_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hudRow" />

        <LinearLayout
            android:id="@+id/hudPowerups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hudMode">

            <TextView
                android:id="@+id/hudPowerupText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Powerups: none"
                android:textColor="@color/bp_gray"
                android:textSize="@dimen/bp_caption_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pauseOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#B3000000"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paused"
                android:textColor="@color/bp_white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonResume"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/label_resume" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRestart"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_restart"
                android:backgroundTint="@color/bp_gold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonExit"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_main_menu"
                android:backgroundTint="@color/bp_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/endOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#CC0B1220"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/endTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game Over"
                android:textColor="@color/bp_white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/endStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Score 0"
                android:textColor="@color/bp_gray" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEndPrimary"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/label_restart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEndSecondary"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_main_menu"
                android:backgroundTint="@color/bp_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/hudTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/hud_chip"
            android:padding="8dp"
            android:text="Tip"
            android:textColor="@color/bp_white"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/tooltipOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#CC000000"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Breakout+!"
                android:textColor="@color/bp_white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="• Drag to move the paddle\n• Tap to launch the ball\n• Collect powerups for special abilities\n• Two-finger tap fires lasers when available"
                android:textColor="@color/bp_gray"
                android:textSize="@dimen/bp_body_text_size" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonTooltipDismiss"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Got it!" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
