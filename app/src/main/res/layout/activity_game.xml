<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hudContainer"
        android:layout_width="0dp"
        android:layout_height="@dimen/bp_hud_reserved_height"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hudRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hud_chip"
            android:padding="10dp">

            <TextView
                android:id="@+id/hudScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:text="@string/label_score_default"
                android:textColor="@color/bp_white"
                android:textSize="@dimen/bp_hud_score_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/buttonPause"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPause"
                style="@style/Widget.BreakoutPlus.PauseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="44dp"
                android:minHeight="44dp"
                android:text=""
                android:contentDescription="@string/label_pause"
                app:icon="@drawable/ic_pause"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/hudStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/buttonPause"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/hudLives"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="@string/label_lives_default"
                    android:textColor="@color/bp_white"
                    android:textSize="@dimen/bp_hud_stat_size" />

                <TextView
                    android:id="@+id/hudTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="@string/label_time_default"
                    android:textColor="@color/bp_white"
                    android:textSize="@dimen/bp_hud_stat_size" />

                <TextView
                    android:id="@+id/hudLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="@string/label_level_default"
                    android:textColor="@color/bp_white"
                    android:textSize="@dimen/bp_hud_stat_size" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/hudLevelBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hud_banner"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/label_level_default"
            android:textColor="@color/bp_white"
            android:textSize="@dimen/bp_hud_banner_size"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/hudStatusRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hudMeta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:text="@string/label_hud_meta_default"
                android:textColor="@color/bp_gray"
                android:textSize="@dimen/bp_hud_mode_size" />

            <LinearLayout
                android:id="@+id/hudShieldRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/hudShieldLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/label_shield_default"
                    android:textColor="@color/bp_white"
                    android:textSize="@dimen/bp_hud_mode_size" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/hudShieldBar"
                    android:layout_width="120dp"
                    android:layout_height="6dp"
                    android:layout_marginStart="10dp"
                    android:max="100"
                    android:progress="100"
                    app:indicatorColor="@color/bp_cyan"
                    app:trackColor="@color/bp_shadow"
                    app:trackThickness="6dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hudPowerups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/hudPowerupChips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:maxWidth="300dp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/hudFps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/label_fps_default"
                android:textColor="@color/bp_cyan"
                android:textSize="@dimen/bp_hud_mode_size"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <com.breakoutplus.game.GameGLSurfaceView
        android:id="@+id/gameSurface"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hudContainer" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_60_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_80_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <View
        android:id="@+id/gameFadeOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/game_fade_overlay"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/gameSurface"
        app:layout_constraintEnd_toEndOf="@id/gameSurface"
        app:layout_constraintStart_toStartOf="@id/gameSurface"
        app:layout_constraintTop_toTopOf="@id/gameSurface" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLaser"
        style="@style/Widget.BreakoutPlus.LaserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/label_fire_laser"
        android:text="@string/label_fire"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/guideline_80_percent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hudOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/pauseOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/pause_overlay"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_paused"
                android:textColor="@color/bp_white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonResume"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/label_resume" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRestart"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_restart"
                android:backgroundTint="@color/bp_gold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonExit"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_main_menu"
                android:backgroundTint="@color/bp_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/endOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/pause_overlay"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/guideline_60_percent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/endTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_game_over"
                android:textColor="@color/bp_white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/endStats"
                style="@style/Text.BreakoutPlus.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_score_level_default"
                android:textColor="@color/bp_gray" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEndPrimary"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/label_restart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEndSecondary"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_main_menu"
                android:backgroundTint="@color/bp_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tooltipOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/pause_overlay"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_welcome_title"
                android:textColor="@color/bp_white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/label_welcome_body"
                android:textColor="@color/bp_gray"
                android:textSize="@dimen/bp_body_text_size" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonTooltipDismiss"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/label_got_it" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
