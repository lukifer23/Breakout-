<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    android:padding="@dimen/bp_margin">

    <TextView
        android:id="@+id/scoreTitle"
        style="@style/Text.BreakoutPlus.ScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_scoreboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreSubtitle"
        style="@style/Text.BreakoutPlus.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/label_scoreboard_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoreTitle" />

    <TextView
        android:id="@+id/scoreProgress"
        style="@style/Text.BreakoutPlus.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/label_progress_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoreSubtitle" />

    <ScrollView
        android:id="@+id/scoreScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/scoreFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoreProgress">

        <LinearLayout
            android:id="@+id/scoreList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/scoreEmpty"
        style="@style/Text.BreakoutPlus.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/label_no_scores"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoreProgress" />

    <LinearLayout
        android:id="@+id/scoreFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonScorePrev"
            style="@style/Widget.BreakoutPlus.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_prev_symbol"
            android:backgroundTint="@color/bp_cyan" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonScoreBack"
            style="@style/Widget.BreakoutPlus.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_back"
            android:backgroundTint="@color/bp_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonScoreNext"
            style="@style/Widget.BreakoutPlus.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_next_symbol"
            android:backgroundTint="@color/bp_cyan" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
