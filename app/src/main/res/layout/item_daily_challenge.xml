<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/card_background"
    android:padding="12dp">

    <TextView
        android:id="@+id/challengeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/bp_white"
        android:textSize="@dimen/bp_body_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/challengeStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/challengeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/bp_green"
        android:textSize="@dimen/bp_caption_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/challengeDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/bp_gray"
        android:textSize="@dimen/bp_caption_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challengeTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/challengeProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginTop="10dp"
        android:progressTint="@color/bp_cyan"
        android:progressBackgroundTint="@color/bp_navy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challengeDescription"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/challengeProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/bp_gray"
        android:textSize="@dimen/bp_caption_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challengeProgressBar" />

</androidx.constraintlayout.widget.ConstraintLayout>
