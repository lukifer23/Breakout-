<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/highScoreCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_panel"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/highScoreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New High Score!"
            android:textColor="@color/bp_white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="serif" />

        <TextView
            android:id="@+id/highScoreMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Score 0 • Level 1 • Mode Classic"
            android:textColor="@color/bp_gray"
            android:textSize="@dimen/bp_body_text_size"
            android:fontFamily="sans-serif" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/highScoreInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#22314D"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="@color/bp_cyan"
            app:hintTextColor="@color/bp_gray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/highScoreNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your name"
                android:inputType="textPersonName"
                android:textColor="@color/bp_white"
                android:textColorHint="@color/bp_gray"
                android:textSize="@dimen/bp_body_text_size"
                android:fontFamily="sans-serif" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/highScoreSkip"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:backgroundTint="@color/bp_gray"
                android:textColor="@color/bp_white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/highScoreSave"
                style="@style/Widget.BreakoutPlus.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Save" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
