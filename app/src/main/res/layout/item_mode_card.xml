<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/bp_line"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/bp_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <View
            android:id="@+id/modeCardAccent"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginBottom="10dp"
            android:background="@color/bp_cyan" />

        <TextView
            android:id="@+id/modeCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/label_mode_classic"
            android:textColor="@color/bp_white"
            android:textSize="@dimen/bp_body_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/modeCardDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif"
            android:text="@string/label_mode_card_description_default"
            android:textColor="@color/bp_gray"
            android:textSize="@dimen/bp_small_text_size" />

        <TextView
            android:id="@+id/modeCardMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/label_mode_card_meta_default"
            android:textColor="@color/bp_gray"
            android:textSize="@dimen/bp_caption_text_size" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/modeCardStart"
            style="@style/Widget.BreakoutPlus.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_start" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
