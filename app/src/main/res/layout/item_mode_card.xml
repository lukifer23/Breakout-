<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    app:strokeColor="#344869"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="#1B2A45">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/modeCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classic"
            android:textColor="@color/bp_white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/modeCardDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Standard breakout with powerups."
            android:textColor="@color/bp_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/modeCardMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Lives 3 • No timer • Balanced"
            android:textColor="#B5C0D4"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/modeCardStart"
            style="@style/Widget.BreakoutPlus.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_start" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
