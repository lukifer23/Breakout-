<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BreakoutPlus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/bp_cyan</item>
        <item name="colorPrimaryVariant">@color/bp_surface_tint</item>
        <item name="colorOnPrimary">@color/bp_navy</item>
        <item name="colorSecondary">@color/bp_magenta</item>
        <item name="colorSecondaryVariant">@color/bp_violet</item>
        <item name="colorOnSecondary">@color/bp_navy</item>
        <item name="colorSurface">@color/bp_surface</item>
        <item name="colorOnSurface">@color/bp_white</item>
        <item name="colorError">@color/bp_red</item>
        <item name="android:statusBarColor">@color/bp_shadow</item>
        <item name="android:navigationBarColor">@color/bp_shadow</item>
        <item name="android:windowBackground">@color/bp_navy</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.BreakoutPlus.Splash" parent="Theme.BreakoutPlus">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Widget.BreakoutPlus.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/bp_navy</item>
        <item name="android:textSize">@dimen/bp_body_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="backgroundTint">@color/bp_cyan</item>
        <item name="strokeColor">@color/bp_line</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="rippleColor">@color/bp_white</item>
    </style>

    <style name="Widget.BreakoutPlus.PauseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/bp_navy</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="backgroundTint">@color/bp_magenta</item>
        <item name="strokeColor">@color/bp_line</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/bp_navy</item>
    </style>

    <style name="Widget.BreakoutPlus.LaserButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/bp_navy</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="backgroundTint">@color/bp_red</item>
        <item name="strokeColor">@color/bp_line</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="Text.BreakoutPlus.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/bp_white</item>
        <item name="android:textSize">@dimen/bp_title_size</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="Text.BreakoutPlus.ScreenTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/bp_white</item>
        <item name="android:textSize">@dimen/bp_screen_title_size</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="Text.BreakoutPlus.Subtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/bp_gray</item>
        <item name="android:textSize">@dimen/bp_subtitle_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Text.BreakoutPlus.Body" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/bp_white</item>
        <item name="android:textSize">@dimen/bp_body_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.BreakoutPlus.Caption" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/bp_gray</item>
        <item name="android:textSize">@dimen/bp_caption_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
</resources>
